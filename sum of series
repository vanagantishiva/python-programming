# Input N
N = 5

# Initialize sum
sum_series = 0

# Loop to calculate each term in the series
for i in range(1, N + 1):
    # Calculate factorial of i
    factorial = 1
    for j in range(1, i + 1):
        factorial *= j
    
    # Add the term to the sum
    sum_series += factorial // i
print(f"Sum = {sum_series}")
